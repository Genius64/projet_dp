{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="text-center">INSCRIPTION</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        <section>
            {{ form_label(registrationForm.username, "Nom d'utilisateur")}}
            <div class="info">{{ form_widget(registrationForm.username) }}</div>
        </section>
        <section>
            {{ form_label(registrationForm.email, 'E-mail') }}
            <div class="info">{{ form_widget(registrationForm.email) }}</div>
        </section>
        <section>
            {{ form_label(registrationForm.plainPassword, "Mot de passe")}}
            <div class="info">{{ form_widget(registrationForm.plainPassword) }}</div>
        </section>
        <section class="flex-row mt-0">
            {{ form_widget(registrationForm.agreeTerms) }}
            {{ form_label(registrationForm.agreeTerms, "J’accepte les conditions d’utilisation")}}
        </section>

        <button type="submit" class="btn-orange mb-7 self-center">Inscription</button>
    {{ form_end(registrationForm) }}
{% endblock %}