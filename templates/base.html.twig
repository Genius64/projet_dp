<!DOCTYPE html>
<html>
    <head lang="fr">
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <script src="https://kit.fontawesome.com/6daef4aa49.js" crossorigin="anonymous"></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header class="bg-yellow-500 pt-5">
        <nav class="border-b-2 border-black flex justify-between h-32">
            <a href="{{ path('app_home') }}"><img src="{{asset('assets/images/logo.svg')}}" alt="logo" class="h-full"></img></a>
            {% if app.user %}
                <section class="bg-red-700">
                    <a href="{{ path('app_logout') }}"><img class="w-96" src="https://www.referenseo.com/wp-content/uploads/2019/03/image-attractive.jpg"></a>
                    <a class="text-blue-500 bg-black underline " href="{{ path('app_logout') }}">Déconnexion</a>
                </section>
            {% else %}
                <section class="self-center flex-nowrap">
                    <a href="{{ path('app_login') }}" class="mr-[7vw] btn-white">Connexion</a>
                    <a href="{{ path('register') }}" class="btn-orange mx-[7vw]">Inscription</a>
                </section>
            {% endif %}
        </nav>
    </header>
    {% block body %}{% endblock %}
    </body>
</html>
