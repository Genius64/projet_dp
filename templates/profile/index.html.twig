{% extends 'base.html.twig' %}

{% block title %}Search | {{ app.user.username }}{% endblock %}

{% block body %}
    <h1 class="text-center">{{ app.user.username }}</h1>
    <section class="flex mx-auto w-3/4 border-2 border-black bg-white rounded-lg p-8">
        {% if app.user.profilePicture %}
        <img class="imgProfileView" src="{app.user.profilePicture}" alt="profile">
        {% else %}
        <img class="imgProfileView" src="https://www.referenseo.com/wp-content/uploads/2019/03/image-attractive.jpg" alt="profile">
        {% endif %}
        <article class="m-auto">
            <p>{{ app.user.username }}</p>
            <p>{{app.user.email}}</p>
        </article>
    </section>
    <input class="w-3/4 h-64 border-black border-2" type="text" placeholder="Facultatif...">

    <form method="post" action="{{ path('app_profile_update') }}" enctype="multipart/form-data">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" value="{{ app.user.username }}" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="{{ app.user.email }}" required>

        <label for="description">Description:</label>
        <textarea id="description" name="description">{{ app.user.description }}</textarea>

        <label for="profile_picture">Profile Picture:</label>
        <input type="file" id="profile_picture" name="profile_picture" accept="image/*">

        <button type="submit">Enregistrer les modifications</button>
    </form>

{% endblock %}